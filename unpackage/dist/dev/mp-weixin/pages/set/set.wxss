/* 水平间距 */
.container {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.container .avatar {
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 20rpx;
}
.container .avatar image {
  width: 150rpx;
  height: 150rpx;
}
.container .options .item {
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0px 4px 8px 0px rgba(200, 200, 200, 0.1);
  margin: 20rpx 0;
  padding: 0 20rpx;
}
.container .options .item :first-child {
  margin-right: 10rpx;
}