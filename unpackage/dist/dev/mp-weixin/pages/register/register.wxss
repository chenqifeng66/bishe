/* 水平间距 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}
.container .logo {
  margin-top: 150rpx;
}
.container .logo image {
  height: 150rpx;
  width: 150rpx;
}
.container .main {
  margin: 50rpx 0;
}
.container .main .form input {
  border: 1px solid #ccc;
  border-radius: 50rpx;
  margin: 30rpx 0;
  width: 400rpx;
  height: 60rpx;
  padding: 10rpx 40rpx;
  text-align: center;
}
.container .main .btn-login {
  background-color: #5b88b3;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 50rpx;
  margin-top: 60rpx;
}
.container .bottom-bar {
  position: absolute;
  bottom: 80rpx;
  font-size: 30rpx;
}